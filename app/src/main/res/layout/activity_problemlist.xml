<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_relative1"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".1"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/blocklyicon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".9"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_lv1"
                android:layout_width="233dp"
                android:layout_height="127dp"
                android:background="@drawable/lv1btn" />

            <Button
                android:layout_marginTop="60dp"
                android:id="@+id/btn_lv2"
                android:layout_width="232dp"
                android:layout_height="119dp"
                android:background="@drawable/lv2btn" />

            <Button
                android:layout_marginTop="60dp"
                android:id="@+id/btn_lv3"
                android:layout_width="230dp"
                android:layout_height="125dp"
                android:background="@drawable/lv3btn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
