<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--  작성자 : 20181619 박종흠  -->
    <style name="RegisterText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="RegisterLabel" parent="@style/RegisterText">
        <item name="android:background">@color/registerName</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RegisterValue" parent="@style/RegisterText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LMC.Button" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="LMC.Button.Colored" parent="LMC.Button">
        <item name="android:tint">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>
    <style name="LMC.Button.Borderless" parent="LMC.Button">
        <item name="android:background">@drawable/abc_btn_borderless_material</item>
    </style>

    <style name="LMC.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="ResultDialog.TextAppearance.Result" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ResultDialog.TextAppearance.Result.Success" parent="ResultDialog.TextAppearance.Result">
        <item name="android:textColor">@color/resultSuccess</item>
    </style>
    <style name="ResultDialog.TextAppearance.Result.Failed" parent="ResultDialog.TextAppearance.Result">
        <item name="android:textColor">@color/resultFailed</item>
    </style>
    <style name="ResultDialog.TextAppearance.Record.MyRecord" parent="TextAppearance.AppCompat.Medium">
        <item name="background">@color/resultMyRecordBackground</item>
    </style>
<!--  작성자 : 20181619 박종흠  -->
</resources>
